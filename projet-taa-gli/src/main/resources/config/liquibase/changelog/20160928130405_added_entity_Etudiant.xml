<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity Etudiant.
    -->
    <changeSet id="20160928130405-1" author="jhipster">
        <createTable tableName="etudiant">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="etu_id" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            
            <column name="etu_nom" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            
            <column name="etu_prenom" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            
            <column name="etu_rue" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="etu_ville" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="etu_code_dep" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="etu_tel_perso" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="etu_tel_mob" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="etu_premier_emploi" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="etu_dernier_emploi" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="etu_rech_emp" type="bit">
                <constraints nullable="true" />
            </column>
            
            <column name="etu_date_maj" type="timestamp">
                <constraints nullable="false" />
            </column>
                        <column name="stagiaire_id" type="bigint">
                <constraints unique="true" nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - Jhipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="etudiant" columnName="etu_date_maj" columnDataType="datetime"/>
        
    </changeSet>
</databaseChangeLog>
